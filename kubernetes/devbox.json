{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "devbox",
    "labels": {
      "name": "devbox"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "devbox",
        "image": "guangyang/devbox:new_shit",
        "resources": {
          "limits": {
            "cpu": "800m"
          }
        },
        "volumeMounts": [
          {
            "name": "id-rsa-vol",
            "readOnly": false,
            "mountPath": "/root/.ssh"
          },
          {
            "name": "airflow-config-vol",
            "readOnly": false,
            "mountPath": "/home/dev/airflow_config"
          },
          {
            "name": "boto-vol",
            "readOnly": false,
            "mountPath": "/home/dev/.aws"
          },
          {
            "name": "spark-conf-vol",
            "readOnly": false,
            "mountPath": "/usr/spark-1.4.1-bin-hadoop2.4/conf"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "id-rsa-vol",
        "secret": {
          "secretName": "id-rsa-secret"
        }
      },
      {
        "name": "airflow-config-vol",
        "secret": {
          "secretName": "airflow-config-secret"
        }
      },
      {
        "name": "boto-vol",
        "secret": {
          "secretName": "boto-secret"
        }
      },
      {
        "name": "spark-conf-vol",
        "secret": {
          "secretName": "spark-conf-secret"
        }
      }
    ]
  }
}
