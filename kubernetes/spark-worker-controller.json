{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "spark-worker-controller",
    "labels": {
      "name": "spark-worker"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "name": "spark-worker"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "spark-worker",
          "uses": "spark-master-svc"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "spark-worker",
            "image": "guangyang/spark-worker:route53-name",
            "ports": [
              {
                "hostPort": 8888,
                "containerPort": 8888
              }
            ],
            "resources": {
              "requests": {
                "cpu": "800m",
                "memory": "4000Mi"
              },
              "limits": {
                "cpu": "800m",
                "memory": "4000Mi"
              }
            },
            "volumeMounts": [
              {
                "name": "spark-conf-vol",
                "readOnly": false,
                "mountPath": "/usr/spark-1.4.1-bin-hadoop2.4/conf"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "spark-conf-vol",
            "secret": {
              "secretName": "spark-conf-secret"
            }
          }
        ]
      }
    }
  }
}
