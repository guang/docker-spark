{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "guang.spark",
    "labels": {
      "name": "spark-master"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "spark-master",
        "image": "guangyang/spark-master",
        "ports": [
          {
            "containerPort": 7077
          }
        ],
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        },
        "volumeMounts": [
          {
            "name": "spark-conf-vol",
            "readOnly": false,
            "mountPath": "/usr/spark-1.4.1-bin-hadoop2.4/conf"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "spark-conf-vol",
        "secret": {
          "secretName": "spark-conf-secret"
        }
      }
    ]
  }
}
